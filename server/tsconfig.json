{
    "compilerOptions": {
      "target": "ES2020",                 // Define o alvo para ES2020, adequado para a maioria dos recursos modernos
      "module": "CommonJS",                // Altere para CommonJS (módulo tradicional do Node)
      "moduleResolution": "Node",          // Resolva os módulos de acordo com as regras do Node
      "esModuleInterop": true,             // Habilita a interoperabilidade entre módulos ES e CommonJS
      "strict": true,                      // Habilita a verificação estrita de tipos
      "skipLibCheck": true,                // Ignora a checagem de bibliotecas para maior desempenho
      "forceConsistentCasingInFileNames": true  // Força consistência no nome dos arquivos
    },
    "include": [
      "server.ts",                          // Inclui diretamente o arquivo server.ts
      "src/**/*"                             // Certifica-se de que a pasta src seja compilada
    ],
    "exclude": [
      "node_modules"                         // Exclui a pasta node_modules da compilação
    ]
  }
  